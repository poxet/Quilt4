@using System.Web.Mvc.Html
@model Quilt4.Web.Models.Initiative

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit Initiative</h2>


<table>
    <tr>
        <th>Name</th>
        <td>@Html.TextBoxFor(m => m.Name)</td>
    </tr>
    <tr>
        <th>ClientToken</th>
        <td>@Html.TextBoxFor(m => m.ClientToken)
    </tr>
    <tr>
        <th>Owner</th>
        <td> @Html.TextBoxFor(m => m.OwnerDeveloperName)</td>
    </tr>
    <tr>
        <th>Members</th>
        <td>
            @foreach (var member in Model.DeveloperRoles)
            {
                @Html.Raw(member.DeveloperName + ", ")
            }
        </td>
    </tr>
</table>

<input type="submit" value="Save" />
<input type="submit" value="Cancel" />
