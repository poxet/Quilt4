
@{
    ViewBag.Title = "Administration";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>This is the administration section.</p>

<h3>Shortcuts</h3>
<ol>
    <li>@Html.ActionLink("Developers", "Index", "AdminDeveloper")</li>
    <li>@Html.ActionLink("Initiatives", "Index", "AdminInitiative")</li>
    <li>@Html.ActionLink("Admin System", "System", "Admin")</li>
</ol>

<br /><br />
<table class="propertyTable">
    <tr>
        <th>SupportEmailAddress</th>
        <td>@ViewBag.SupportEmailAddress</td>
    </tr>
    <tr>
        <th>SmtpServerAddress</th>
        <td>@ViewBag.SmtpServerAddress</td>
    </tr>
    <tr>
        <th>SmtpServerPort</th>
        <td>@ViewBag.SmtpServerPort</td>
    </tr>
    <tr>
        <th>SendEMailEnabled</th>
        <td>@ViewBag.SendEMailEnabled</td>
    </tr>
    <tr>
        <th>EMailConfirmationEnabled</th>
        <td>@ViewBag.EMailConfirmationEnabled</td>
    </tr>
</table>
