@using Quilt4.Web.Models
@model InitiativeViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li>@Html.ActionLink("Initiative", "Index", "Initiative")</li>
    <li>@Html.ActionLink(Model.Name ?? Constants.DefaultInitiativeName, "Details", "Initiative", new { id = Model.UniqueIdentifier }, null)</li>
    <li class="active">Properties</li>
</ol>

<h2>Initiative Properties</h2>

@using (Html.BeginForm())
{
    <table>
        <tr>
            <th>Initiative Name</th>
            <td>@Html.TextBoxFor(x => x.Name)</td>
        </tr>
    </table>

    <br/>
    <input type="submit" value="Save"/>
    @Html.ActionLink("Cancel", "Details", "Initiative", new { id = Model.UniqueIdentifier }, null)
}