@model Quilt4.Web.Models.ApplicationPropetiesModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (@Html.BeginForm("Edit", "Application", FormMethod.Post))
{
    @Html.HiddenFor(m => m.InitiativeId)
    @Html.HiddenFor(m => m.ApplicationName)
    <table>
        <tr>
            <td>Application Group</td>
            <td>@Html.TextBoxFor(m => m.ApplicationGroupName)</td>
        </tr>
        <tr>
            <td>Ticket Prefix</td>
            <td>@Html.TextBoxFor(m => m.TicketPrefix)</td>
        </tr>
        @foreach (var env in Model.Environments)
        {
            if (env.Equals("Dev"))
            {
                <tr>
                    <td>Dev color</td>
                    <td>@Html.TextBoxFor(m => m.DevColor)</td>
                </tr>
            }
            else if (env.Equals("CI"))
            {
                <tr>
                    <td>CI color</td>
                    <td>@Html.TextBoxFor(m => m.CiColor)</td>
                </tr>
            }
            else if (env.Equals("Prod"))
            {
                <tr>
                    <td>Prod color</td>
                    <td>@Html.TextBoxFor(m => m.ProdColor)</td>
                </tr>
            }
            else
            {
                <tr>
                    <td>Something went wrong</td>
                </tr>
            }
        }
        
        <tr>
            <td><input style="margin: 0 25px 0 5px" type="submit" value="Save"/></td>
            <td>@Html.ActionLink("Cancel", "Details", "Application", new { initiativeUniqueIdentifier = @Model.InitiativeId, Application = @Model.ApplicationName }, null)</td>
        </tr>
    </table>
}

